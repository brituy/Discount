<?xml version="1.0" encoding="UTF-8"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="brituy_discount" resource="default" engine="innodb" comment="Discount main table">
        <column xsi:type="smallint" name="discount_id" padding="6" unsigned="true" nullable="false" identity="true" 
        	comment="discount ID"/>
        <column xsi:type="boolean" name="activity" nullable="false" 
        	comment="Discount Active?"/>
        <column xsi:type="varchar" name="discount_title" nullable="false" length="255"
        	comment="Discount Name"/>
        <column xsi:type="smallint" name="discount_cat_id" padding="6" unsigned="true" nullable="false" identity="false" 
        	comment="Product category"/>
        <column xsi:type="decimal" name="discount_val" unsigned="true" nullable="true" scale="4" precision="12" 
        	comment="Discount value"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="discount_id"/>
        </constraint>
    </table>
</schema>
